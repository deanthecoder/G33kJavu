<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dialogHostAvalonia="clr-namespace:DialogHostAvalonia;assembly=DialogHost.Avalonia"
             xmlns:icons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:viewModels="clr-namespace:G33kJavu.ViewModels"
             x:Class="G33kJavu.App"
             Name="G33kJavu"
             RequestedThemeVariant="Dark"
             x:DataType="viewModels:AppViewModel">

    <Application.Styles>
        <FluentTheme />
        <icons:MaterialIconStyles />
        <dialogHostAvalonia:DialogHostStyles />

        <Style Selector="Button">
            <Setter Property="Focusable" Value="False" />
        </Style>
    </Application.Styles>

    <Application.Resources>
        <SolidColorBrush x:Key="AppBackgroundBrush" Color="#101216" />
        <SolidColorBrush x:Key="PaneBackgroundBrush" Color="#171A20" />
        <SolidColorBrush x:Key="SubtlePanelBrush" Color="#1D212A" />
        <SolidColorBrush x:Key="SeparatorBrush" Color="#2B3140" />
        <SolidColorBrush x:Key="HeadingBrush" Color="#E7E9EE" />
        <SolidColorBrush x:Key="AccentPillBrush" Color="#2D7DD2" />
        <SolidColorBrush x:Key="CodeBackgroundBrush" Color="#0E1014" />

        <SolidColorBrush x:Key="DiffExactBrush" Color="#6EE7B7" />
        <SolidColorBrush x:Key="DiffNormalizedBrush" Color="#FBBF24" />
        <SolidColorBrush x:Key="DiffDifferentBrush" Color="#F87171" />
        <SolidColorBrush x:Key="DiffErrorBrush" Color="#FB7185" />
    </Application.Resources>

    <NativeMenu.Menu>
        <NativeMenu>
            <NativeMenuItem Header="About G33kJavu" Command="{CompiledBinding AboutCommand}" />
        </NativeMenu>
    </NativeMenu.Menu>
</Application>
