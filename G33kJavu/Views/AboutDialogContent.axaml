<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="G33kJavu.Views.AboutDialogContent"
             Background="Transparent">
    <StackPanel>
        <StackPanel.Styles>
            <Style Selector="TextBlock">
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="FontSize" Value="12" />
            </Style>
        </StackPanel.Styles>

        <Image Source="/Assets/app.png" Width="92" Height="92" Margin="16" />

        <TextBlock Text="G33kJavu" FontSize="30" />
        <TextBlock Text="Duplicate Code Detector" FontSize="12" Opacity="0.85"/>

        <TextBlock x:Name="AppVersion" FontSize="12" Margin="0,8,0,0" />
        <TextBlock Text="Copyright Â© 2025 Dean Edis (DeanTheCoder)." Margin="0,16,0,0" />
        <TextBlock Text="All rights reserved." Margin="4" />

        <TextBlock Text="https://github.com/deanthecoder"
                   Margin="0,10,0,0"
                   Foreground="SkyBlue"
                   TextDecorations="Underline"
                   Cursor="Hand"
                   PointerPressed="OnGitHubLinkPressed" />
    </StackPanel>
</UserControl>

